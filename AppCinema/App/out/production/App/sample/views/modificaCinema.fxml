<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ModificaCinema">
   <children>
      <AnchorPane prefHeight="297.0" prefWidth="453.0">
         <children>
            <TextField fx:id="NomeCinema" layoutX="7.0" layoutY="28.0" prefHeight="30.0" prefWidth="568.0" promptText="Nome Cinema">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="Indirizzo" layoutX="7.0" layoutY="81.0" prefHeight="30.0" prefWidth="568.0" promptText="Indirizzo">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="Provincia" layoutX="7.0" layoutY="140.0" prefHeight="38.0" prefWidth="77.0" promptText="Provincia">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <HBox layoutX="76.0" layoutY="211.0" prefHeight="59.0" prefWidth="399.0">
               <children>
                  <Button fx:id="SalvaButton" mnemonicParsing="false" onAction="#updateCinema" prefHeight="58.0" prefWidth="200.0" text="Salva">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="AnnullaButton" mnemonicParsing="false" onAction="#cancelCinema" prefHeight="58.0" prefWidth="200.0" text="Annulla">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <TextField fx:id="numeroSala" layoutX="101.0" layoutY="140.0" prefHeight="38.0" prefWidth="106.0" promptText="Numero di sala">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="città" layoutX="234.0" layoutY="140.0" prefHeight="38.0" prefWidth="106.0" promptText="Città">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <TextField fx:id="telefono" layoutX="375.0" layoutY="140.0" prefHeight="38.0" prefWidth="175.0" promptText="Telefono">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
         </children>
      </AnchorPane>
   </children>
</StackPane>
